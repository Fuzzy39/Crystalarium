<?xml version="1.0" encoding="utf-8" ?>

<Controls>
	
	<!--Camera/View Controls-->

	<CamUp>    W </CamUp>
	<CamDown>  S </CamDown>
	<CamLeft>  A </CamLeft>
	<CamRight> D </CamRight>

	<CamUp>    Up </CamUp>
	<CamDown>  Down </CamDown>
	<CamLeft>  Left </CamLeft>
	<CamRight> Right </CamRight>
		

	<!-- these controls should probably be the same -->
	<StartPan> MouseMiddle </StartPan>
	<Pan>      MouseMiddle </Pan>

	<!-- For the most part, this fills the screen with garbage -->
	<ToggleDebugView> OemTilde </ToggleDebugView>
		

	

	<!--Controls to change the map-->

	<!--controls for manipulating agents. -->
	<PlaceAgent>  MouseLeft </PlaceAgent>
	<RemoveAgent> MouseRight </RemoveAgent>
	<RotateAgent> R </RotateAgent>


	<Cut> LeftControl, X</Cut>
	<Copy> LeftControl, C</Copy>
	<Paste> LeftControl, V</Paste>


	<!-- Controls to set simulation speed -->
		
	<!-- Pause/Unpause the simulation. -->
	<ToggleSim> Space </ToggleSim>
		
	<!-- Perform a single simulation step while paused. -->
	<SimStep> Z </SimStep>
		
	<!-- Change the running speed of the simulation. -->
	<DecreaseSimSpeed> X </DecreaseSimSpeed>
	<IncreaseSimSpeed> C </IncreaseSimSpeed>
	
		


	<!-- Controls for agent selection and menus -->

	<!-- Copies the agent being hovered over. -->
	<Pipette>Tab</Pipette>

	<!-- Look through the list of agent types. -->
	<NextAgent> E </NextAgent>
	<PrevAgent> Q </PrevAgent>

	<!-- Opens the 'Change Ruleset?' Menu, and closes menus -->
	<OpenRulesetMenu> P </OpenRulesetMenu>
		
	<!-- Closes a menu if one is open, and closes the game otherwise. -->
	<Close> Escape </Close>

	<!--Open the Save/Load File menus-->
	<Save> LeftControl, S</Save>
	<Load> LeftControl, O</Load>

	<Instructions>I</Instructions>
	
	
	
</Controls>